<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.t3q.dranswer.mapper.AppServiceMapper">

    <resultMap type="DbAppService" id="dbAppServiceMap">
		<result property="service"				column="service" />
		<result property="company"				column="company" />
		<result property="serviceName"			column="service_name" />
		<result property="modTimestamp"			column="mod_timestamp" />
		<result property="regTimestamp"			column="reg_timestamp" />
    </resultMap>

	<select id="getServiceSequence" resultType="int">
    	select nextval('swint.swint_svc_seq')
    </select>

   <select id="selectAppServiceByService" parameterType="String" resultType="DbAppService">
    	select	*
    	from	tb_service_info
    	where	service = #{service}
    </select>

    <select id="selectAppServiceByCompany" parameterType="String" resultMap="dbAppServiceMap">
    	select	*
    	from	tb_service_info
    	where	company = #{company}
    </select>

    <insert id="insertAppService" parameterType="map">
		insert into tb_service_info
		(
			service,
			company,
			service_name
		) values (
			#{obj.service},
			#{obj.company},
			#{obj.serviceName}
		)
    </insert>
    
	<update id="updateAppService" parameterType="map">
		update tb_service_info set 
			service_name	= #{obj.serviceName},
			mod_timestamp	= current_timestamp
		where
			company			= #{obj.company}
			and service		= #{obj.service}
    </update>

	<delete id="deleteAppService" parameterType="String">
		delete from tb_service_info
		where
			service = #{service}
	</delete>

</mapper>